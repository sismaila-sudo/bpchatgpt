{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/types/*": ["types/*"],
      "@/services/*": ["services/*"],
      "@/routes/*": ["routes/*"],
      "@/utils/*": ["utils/*"],
      "@/calculations/*": ["calculations/*"]
    }
  },
  "include": [
    "src/index.ts",
    "src/routes/simple-calc-minimal.ts",
    "src/services/supabase-minimal.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "src/routes/calculations.ts",
    "src/routes/exports.ts",
    "src/routes/imports.ts",
    "src/routes/metrics.ts",
    "src/routes/mvp-calculations.ts",
    "src/routes/projects.ts",
    "src/routes/simple-calc.ts",
    "src/services/supabase.ts",
    "src/calculations/**"
  ]
}